{
  "name": "githood",
  "version": "0.0.0",
  "description": "Run git commands in a group of repos.",
  "main": "dist/githood.js",
  "scripts": {
    "dev": "onchange -ikv 'src/**/*' -- npm run build",
    "compile": "npm run build -- --noEmit",
    "build": "tsc --project tsconfig.json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postversion": "git push origin && git push origin --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rmariuzzo/githood.git"
  },
  "keywords": [
    "git",
    "multi",
    "tool"
  ],
  "author": "Rubens Mariuzzo <rubens@mariuzzo.com>",
  "license": "SEE LICENSE IN ./LICENSE",
  "bugs": {
    "url": "https://github.com/rmariuzzo/githood/issues"
  },
  "homepage": "https://github.com/rmariuzzo/githood#readme",
  "dependencies": {
    "execa": "^5.0.0",
    "ini": "^2.0.0",
    "yargs-parser": "^20.2.4"
  },
  "devDependencies": {
    "@types/ini": "^1.3.30",
    "@types/node": "^14.14.14",
    "@types/yargs-parser": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "eslint": "^6.8.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "onchange": "^7.1.0",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.{ts,md}": "prettier --write"
  }
}
